<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/Surah_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="56dp"
        android:ems="10"
        android:hint="Surah Number"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/find"
        android:layout_width="0dp"
        android:layout_height="38dp"
        android:layout_marginStart="64dp"
        android:text="Find"
        app:layout_constraintBottom_toTopOf="@+id/ayat_display"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Ayat_Num"
        app:layout_constraintVertical_bias="0.155" />

    <TextView
        android:id="@+id/ayat_display"
        android:layout_width="279dp"
        android:layout_height="272dp"
        android:layout_marginStart="64dp"
        android:layout_marginTop="92dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/search" />

    <EditText
        android:id="@+id/Ayat_Num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="56dp"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Ayat Number"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Surah_num" />

    <Button
        android:id="@+id/search"
        android:layout_width="88dp"
        android:layout_height="39dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="16dp"
        android:text="Repo"
        app:layout_constraintStart_toEndOf="@+id/find"
        app:layout_constraintTop_toBottomOf="@+id/Ayat_Num" />

</androidx.constraintlayout.widget.ConstraintLayout>